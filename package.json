{
  "name": "hms-backend",
  "version": "1.0.0",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/dist/index.js",
    "dev:server": "nodemon --watch ./server --ext ts --exec \"./node_modules/.bin/tsx server/index.ts\"",
    "dev": "concurrently \"npm run dev:server\" \"cd client && npm run dev\"",
    "install:all": "npm install && cd client && npm install --legacy-peer-deps",
    "build:server": "npx tsc -p server/tsconfig.json",
    "build": "npm run build:server && cd client && npm run build"
  },
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.16.0",
    "@types/pg": "^8.15.4",
    "body-parser": "^2.2.0",
    "cloudinary": "^2.7.0",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "fastify": "^4.26.2",
    "@fastify/cors": "^9.0.1",
    "framer-motion": "^12.23.3",
    "googleapis": "^152.0.0",
    "html2canvas": "^1.4.1",
    "mime-types": "^3.0.1",
    "multer": "^2.0.1",
    "pg": "^8.16.3",
    "promptpay-qr": "^0.5.0",
    "puppeteer": "^22.15.0",
    "qrcode": "^1.5.4",
    "qrcode.react": "^4.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-qr-code": "^2.0.18"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/mime-types": "^3.0.1",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.13",
    "@types/node-fetch": "^2.6.12",
    "@types/qrcode": "^1.5.5",
    "concurrently": "^9.2.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
